<h2>Your Teams:</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Team Name</th>
      <th>Description</th>
      <th>Team Manager</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% current_user.teams.each do |team| %>
      <tr>
        <td><strong><%= team.name %></strong> (Members: <%= team.members.count %>)</td>
        <td><%= team.description %></td>
        <td><strong><%= team.manager.name %></strong></td>
        <td><%= link_to "View More", team_path(team), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>All Teams:</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Team Name</th>
      <th>Description</th>
      <th>Team Manager</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><strong><%= team.name %></strong> (Members: <%= team.members.count %>)</td>
        <td><%= team.description %></td>
        <td><strong><%= team.manager.name %></strong></td>
        <td>
          <%= link_to "View More", team_path(team), class: "btn btn-primary" %>
          <% if team.manager != current_user %>
            <% unless team.members.include?(current_user) %>
              <%= link_to "Join Team", join_team_path(team), method: :post, class: "btn btn-primary" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
