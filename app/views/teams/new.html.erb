<h2>Create a New Team</h2>
<%= form_for @team do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
  
    <div class="form-group">
    <%= f.label :manager_id %>
    <%= f.collection_select :manager_id, @managers, :id, :name, { prompt: 'Select a manager' }, class: "form-control" %>
  </div>

  
    <%= f.submit "Create Team", class: "btn btn-primary" %>
  <% end %>
