<h2 class="text-center mt-4">EDIT </h2>
<br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
<br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group row form-label">
          <%= f.label :name %>
          <div class="col-12">
           <%= f.text_field :name, autofocus: true,class: "col-12 col-form-label text-dark"%>
          </div>
        </div>

        <div class="form-group row form-label">
          <%= f.label :email %>
          <div class="col-12">
           <%= f.email_field :email, autofocus: true,class: "col-12 col-form-label text-dark",  autocomplete: "email"%>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group row form-label">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
          <div class="col-12">
            <%= f.password_field :password, autocomplete: "new-password"  , class: "col-12 form-control shadow rounded"%>
          </div>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="form-group row form-label">
          <%= f.label :password_confirmation %>
          <div class="col-12">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "col-12 form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row form-label">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
           <div class="col-12">
               <%= f.password_field :current_password, autocomplete: "current-password" , class: "col-12 form-control shadow rounded" %>
          </div>
        </div>
<br>
        <div class="form-group row justify-content-center form-label">
          <%= f.submit "Update", class: "btn-md btn btn-success"  %>
        </div>
      <% end %>
<br>
  
      <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
<br>
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>