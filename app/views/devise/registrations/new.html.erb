<h2 class="text-center mt-4">SIGN UP</h2>
<br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
<br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "shadow p-3 mb-3 bg-info rounded") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group row form-label">
          <%= f.label :name %>
          <div class="col-12">
            <%= f.text_field :name,class: "col-12 col-form-label text-dark", required: true %>
          </div>
        </div>
        <div class="form-group row form-label">
          <%= f.label :email %>
           <div class="col-12">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "col-12 col-form-label text-dark", required: true %>
          </div>
        </div>

        <div class="form-group row form-label">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
           <div class="col-12">
            <%= f.password_field :password, autocomplete: "new-password" , class: "col-12 form-control shadow rounded", required: true%>
          </div>
        </div>

        <div class="form-group row form-label">
          <%= f.label :password_confirmation %><br />
         <div class="col-12">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-12 form-control shadow rounded", required: true %>
          </div>
        </div>
<br>
        <div class="form-group row justify-content-center form-label">
          <%= f.submit "Sign up", class: "btn btn-info btn-lg", style: "width: 100px;"%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>