<h2 class="text-center mt-4">LOG IN</h2>
<br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "shadow p-3 mb-3 bg-info rounded") do |f| %>
        <div class="form-group row form-label">
          <%= f.label :email %>
           <div class="col-12">
             <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "col-12 col-form-label text-dark" , required: true%>
          </div>
        </div>

        <div class="form-group row form-label">
          <%= f.label :password %>
           <div class="col-12">
             <%= f.password_field :password, autocomplete: "current-password", class: "col-12 form-control shadow rounded" , required: true%>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
<br>
        <div class="form-group row justify-content-center form-label">
          <%= f.submit "Log in" , class: "btn btn-info btn-lg", style: "width: 100px;"%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>