<h2 class="text-center mt-4">Forgot your password?</h2>
<br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group row form-label">
            <%= f.label :email %>
            <div class="col-12">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-12 col-form-label text-dark" %>
            </div>
          </div>

          <div class="form-group row justify-content-center form-label">
            <%= f.submit "Send me reset password instructions" ,class: "btn-md btn btn-success"%>
          </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
</div>
