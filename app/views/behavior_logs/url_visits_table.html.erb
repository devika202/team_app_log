<div class="container">
  <% if @visited_urls.any? %>
    <h1 class="text-center">URL Visits and Time Spent Table</h1><br>
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
        <th scope="col">URL</th>
        <th scope="col">Total Time Spent</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% @visited_urls.each do |url_info| %>
          <tr>
            <td scope="row"><%= url_info[:page_name] %></td>
            <td scope="row"><%= url_info[:total_time_spent] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center"><b>No URL visits to display.<b></p>
  <% end %>
</div>
